<Page x:Class="ProjectSystemWPF.View.MyProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectSystemWPF.View"
      xmlns:vm = "clr-namespace:ProjectSystemWPF.ViewModel"
      xmlns:c="clr-namespace:ProjectSystemWPF.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Мои проекты"
      DataContext="{DynamicResource myProjectVM}">

    <Page.Resources>
        <vm:MyProjectVM x:Key="myProjectVM"/>
    </Page.Resources>
    <Grid Background="#FFFDC401">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".6*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Background="LightYellow" Margin="10" BorderBrush="Black" BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="ПРОЕКТЫ" Grid.ColumnSpan="3" FontWeight="Bold" HorizontalAlignment="Center" Margin="5" FontSize="20"/>
                    <Button Content="🗑" Height="26" Width="49" Margin="5" HorizontalAlignment="Center" Grid.Column="1" Command="{Binding DeleteProject}" Cursor="Hand" />
                    <Button Content="✚" Height="26" Width="49" Margin="5" HorizontalAlignment="Left" Grid.Column="2" Command="{Binding NewProject}"/>

                </Grid>

                <Grid Grid.Row="1">
                    <ListBox  ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" MouseDoubleClick="EditProjectClick" BorderBrush="Black" BorderThickness ="1"  Background="LightYellow" Margin="5" ItemsSource="{Binding Projects}" SelectedItem="{Binding Project}" HorizontalContentAlignment="Stretch" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Background="#FFFDC401">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Margin="3" Width="20" Height="20">
                                            <Ellipse.Fill>
                                                <MultiBinding Converter="{c:ConvertDateToBrush}">
                                                    <Binding  Path="StartDate" />
                                                    <Binding  Path="CompletionDate" />
                                                </MultiBinding>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <Label Content="{Binding Title}" FontSize="15"/>
                                        <TextBlock Text="{Binding CompletionDate, StringFormat=dd.MM.yyyy}" FontSize="15"/>

                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>

                </Grid>

            </Grid>
        </Border>
        <Border Background="LightYellow" Margin="10" BorderBrush="Black" BorderThickness="1" Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="ЗАДАЧИ" Grid.ColumnSpan="3" FontWeight="Bold" HorizontalAlignment="Center" Margin="5" FontSize="20"/>
                    <Button Content="🗑" Height="26" Width="49" Margin="5" HorizontalAlignment="Center" Grid.Column="1" Command="{Binding DeleteTask}" />
                    <Button Content="✚" Height="26" Width="49" Margin="5" HorizontalAlignment="Left" Grid.Column="2" Command="{Binding NewTask}"/>

                </Grid>

                <Grid Grid.Row="1">
                    <ListBox ScrollViewer.VerticalScrollBarVisibility="Visible" BorderBrush="Black" MouseDoubleClick="EditTaskClick" BorderThickness ="1" Background="LightYellow" Margin="5" ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}" HorizontalContentAlignment="Stretch" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Background="#FFFDC401" Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="{Binding Title}" FontSize="15"/>
                                        <!--<Label Content="{Binding Executor}" FontSize="15"/>-->
                                        <Label Content="{Binding StatusTitle}" Foreground="{Binding StatusTitle, Converter={c:ConvertStatusToBrush}}"  FontSize="15"/>
                                        <ItemsControl ItemsSource="{Binding TaskForUsers}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding FIO}" Margin="5">
                                                        <TextBlock.Style>
                                                            <Style>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding StatusId}" Value="1">
                                                                        <Setter Property="TextBlock.Foreground" Value="Red"/>
                                                                        <Setter Property="TextBlock.ToolTip" Value="Не взял"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding StatusId}" Value="2">
                                                                        <Setter Property="TextBlock.Foreground" Value="BlueViolet"/>
                                                                        <Setter Property="TextBlock.ToolTip" Value="Пытается"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding StatusId}" Value="3">
                                                                        <Setter Property="TextBlock.Foreground" Value="Green"/>
                                                                        <Setter Property="TextBlock.ToolTip" Value="Осилил"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding StatusId}" Value="4">
                                                                        <Setter Property="TextBlock.Foreground" Value="Gray"/>
                                                                        <Setter Property="TextBlock.ToolTip" Value="Забил"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</Page>
