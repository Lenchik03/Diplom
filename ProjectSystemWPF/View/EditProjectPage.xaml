<Window x:Class="ProjectSystemWPF.View.EditProjectPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectSystemWPF.View"
        mc:Ignorable="d"
        Title="" Height="400" Width="500">
    <Grid Background="#FFFDC401">
        <Border Background="LightYellow" Margin="10" BorderBrush="Black" BorderThickness="1">
            <StackPanel>
                <Label Content="ПРОЕКТ" FontWeight="Bold" HorizontalAlignment="Center" Margin="5" FontSize="20"/>
            
            <StackPanel Margin="5">
                <Label Content="Название"/>
                <TextBox Text="{Binding Project.Title}"/>
                <Label Content="Описание"/>
                <TextBox Text="{Binding Project.Description}" Height="100"/>
                <Label Content="Дедлайн"/>
                <DatePicker SelectedDate="{Binding Project.CompletionDate}" Language="ru"/>
                <Button Content="Сохранить" Height="30" Width="110" Margin="20"/>
            </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
