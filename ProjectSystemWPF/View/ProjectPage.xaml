<Page x:Class="ProjectSystemWPF.View.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectSystemWPF.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главная страница">

    <Grid Background="#FFFDC401">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Background="LightYellow" Margin="10" BorderBrush="Black" BorderThickness="1">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="ПРОЕКТЫ" Grid.ColumnSpan="3" FontWeight="Bold" HorizontalAlignment="Center" Margin="5" FontSize="20"/>
                    <Button Content="🗑" Height="26" Width="49" Margin="5" HorizontalAlignment="Center" Grid.Column="1" Command="{Binding DeleteEmployee}" />
                    <Button Content="✚" Height="26" Width="49" Margin="5" HorizontalAlignment="Left" Grid.Column="2" Command="{Binding NewEmployee}"/>

                </Grid>
                
                <ScrollViewer>
                    <ListBox BorderBrush="Black" BorderThickness ="1"  Background="#FFFDC401" Margin="5" ItemsSource="{Binding Projects}" SelectedItem="{Binding Project}" HorizontalContentAlignment="Stretch" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Background="#FFFDC401" Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="{Binding Project.Title}" FontSize="15"/>
                                        <Label Content="{Binding Project.CompletionDate}" FontSize="15"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>

            </StackPanel>
        </Border>
        <Border Background="LightYellow" Margin="10" BorderBrush="Black" BorderThickness="1" Grid.Column="1">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="ЗАДАЧИ" Grid.ColumnSpan="3" FontWeight="Bold" HorizontalAlignment="Center" Margin="5" FontSize="20"/>
                    <Button Content="🗑" Height="26" Width="49" Margin="5" HorizontalAlignment="Center" Grid.Column="1" Command="{Binding DeleteEmployee}" />
                    <Button Content="✚" Height="26" Width="49" Margin="5" HorizontalAlignment="Left" Grid.Column="2" Command="{Binding NewEmployee}"/>

                </Grid>
                <ScrollViewer>
                    <ListBox BorderBrush="Black" BorderThickness ="1" Background="#FFFDC401" Margin="5" ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}" HorizontalContentAlignment="Stretch" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Background="#FFFDC401" Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="{Binding SelectedTask.Title}" FontSize="15"/>
                                        <Label Content="{Binding Executor}" FontSize="15"/>
                                        <Label Content="{Binding Status}" FontSize="15"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>

            </StackPanel>
        </Border>
    </Grid>
</Page>
