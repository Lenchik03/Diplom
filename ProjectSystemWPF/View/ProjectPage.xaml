<Page x:Class="ProjectSystemWPF.View.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectSystemWPF.View"
      xmlns:vm="clr-namespace:ProjectSystemWPF.ViewModel"
      xmlns:c="clr-namespace:ProjectSystemWPF.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главная страница"
      DataContext="{DynamicResource projectVM}">

    <Page.Resources>
        <vm:ProjectVM x:Key="projectVM"/>
    </Page.Resources>
    <Grid Background="#FFFDC401">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Background="LightYellow" Margin="10" BorderBrush="Black" BorderThickness="1">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="ПРОЕКТЫ" Grid.ColumnSpan="3" FontWeight="Bold" HorizontalAlignment="Center" Margin="5" FontSize="20"/>
                   
                </Grid>

                <Grid>
                    <ListBox ScrollViewer.VerticalScrollBarVisibility="Visible"  BorderBrush="Black" BorderThickness ="1"  Background="#FFFDC401" Margin="5" ItemsSource="{Binding Projects}" SelectedItem="{Binding Project}" HorizontalContentAlignment="Stretch" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Background="#FFFDC401" Margin="5">
                                    
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="20" Height="20">
                                            <Ellipse.Fill>
                                                <MultiBinding Converter="{c:ConvertDateToBrush}">
                                                    <Binding  Path="StartDate" />
                                                    <Binding  Path="CompletionDate" />
                                                </MultiBinding>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <Label Content="{Binding Title}" FontSize="15"/>

                                        <TextBlock Text="{Binding CompletionDate, StringFormat=dd.MM.yyyy}"  FontSize="15"/>


                                        <Label Content="{Binding Creator.Initials}" FontSize="15"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </StackPanel>
        </Border>
        <Border Background="LightYellow" Margin="10" BorderBrush="Black" BorderThickness="1" Grid.Column="1">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="ЗАДАЧИ" Grid.ColumnSpan="3" FontWeight="Bold" HorizontalAlignment="Center" Margin="5" FontSize="20"/>

                </Grid>
                <Grid>
                    <StackPanel Margin="3">
                        <TextBlock Text="Фильтрация по статусу"/>
                        <ComboBox DisplayMemberPath="Title"
          SelectedItem="{Binding SelectedStatus}" 
          ItemsSource="{Binding AllStatuses}"/>
                    </StackPanel>
                    <ListBox ScrollViewer.VerticalScrollBarVisibility="Visible"  BorderBrush="Black" MouseDoubleClick="DescriptionTaskClick" BorderThickness ="1" Background="#FFFDC401" Margin="5" ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}" HorizontalContentAlignment="Stretch" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Background="#FFFDC401" Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="{Binding Title}" FontSize="15"/>
                                        <!--<Label Content="{Binding Executor}" FontSize="15"/>-->
                                        <Label Content="{Binding StatusTitle}" FontSize="15"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Page>
