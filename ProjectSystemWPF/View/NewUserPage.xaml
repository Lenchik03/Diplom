<Window x:Class="ProjectSystemWPF.View.NewUserPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectSystemWPF.View"
        mc:Ignorable="d"
        Title="Новый сотрудник" Height="450" Width="600"
        Style="{StaticResource MaterialDesignWindow}">
    
    <StackPanel Margin="20">
        <Label Content="Имя"/>
        <TextBox Text="{Binding User.FirstName}"/>
        <Label Content="Фамилия"/>
        <TextBox Text="{Binding User.LastName}"/>
        <Label Content="Отчество"/>
        <TextBox Text="{Binding User.Patronymic}"/>
        <Label Content="Дата рождения"/>
        <TextBox Text=""/>
        <Label Content="Эл.почта"/>
        <TextBox Text="{Binding User.Email}"/>
        <Label Content="Должность"/>
        <TextBox Text=""/>
        <Label Content="Номер телефона"/>
        <TextBox Text="{Binding Phone}"/>
        <Button Content="Сохранить" Command="Save" Width="110" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
