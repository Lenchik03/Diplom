<Window x:Class="ProjectSystemWPF.View.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectSystemWPF.View"
        xmlns:vm="clr-namespace:ProjectSystemWPF.ViewModel"
        mc:Ignorable="d"
        Title="Смена пароля" Height="350" Width="400"
        DataContext="{DynamicResource resetpassvm}">
    <Window.Resources>
        <vm:ResetPasswordVM x:Key="resetpassvm"/>
    </Window.Resources>
    <Grid Background="#FFFDC401">
        <Border BorderBrush="Black" BorderThickness="1" Margin="20">
        <StackPanel Background="LightYellow" >
            <Label Content="Смена пароля" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="15"/>
            <Label Content="Введите старый пароль" Margin="10,0,10,0" FontSize="16"/>
            <PasswordBox x:Name="oldpass" Margin="10,0,10,0"/>
            <Label Content="Введите новый пароль" Margin="10,0,10,0" FontSize="16"/>
                <PasswordBox KeyDown="KeyDown" x:Name="newpass" Margin="10,0,10,0"/>
                <Button  Content="Сохранить" Command="{Binding Save}" Margin="15" Height="30" Width="110"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
