<Window x:Class="ProjectSystemWPF.View.EditTaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectSystemWPF.View"
        xmlns:vm ="clr-namespace:ProjectSystemWPF.ViewModel"
      mc:Ignorable="d" 
      Height="650" Width="400"
      Title="EditTaskPage"
        DataContext="{DynamicResource editTaslVM}">
    <Window.Resources>
        <vm:EditTaskVM x:Key="editTaslVM"/>
    </Window.Resources>
    <Grid Background="#FFFDC401">
        <Border Background="LightYellow" Margin="10" BorderBrush="Black" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="ЗАДАЧА" FontWeight="Bold" HorizontalAlignment="Center" FontSize="20"/>

                <StackPanel Grid.Row="1">
                    <Label Content="Название"/>
                    <TextBox KeyDown="KeyDown" Text="{Binding Task.Title}"/>
                    <Label Content="Описание"/>
                    <TextBox KeyDown="KeyDown" Text="{Binding Task.Description}" TextWrapping="Wrap"/>
                    <Label Content="Проект"/>
                    <ComboBox KeyDown="KeyDown" ScrollViewer.VerticalScrollBarVisibility="Visible" ItemsSource="{Binding Projects}" SelectedItem="{Binding SelectedProject}" DisplayMemberPath="Title"/>
                    <Label Content="Назначить исполнителей:" Visibility="{Binding ExecutorsVisible}"/>
                    <StackPanel Visibility="{Binding ExecutorsVisible}">
                        <Label Content="Поиск по ФИО"/>
                        <TextBox Text="{Binding Search, 
UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <Grid Visibility="{Binding ExecutorsVisible}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="190*"/>
                            <ColumnDefinition Width="85*"/>
                            <ColumnDefinition Width="190*"/>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Content="Сотрудники"/>
                            <ListBox Height="200" Grid.Row="1"  ScrollViewer.VerticalScrollBarVisibility="Visible" BorderThickness ="1" BorderBrush="Black" Background="#FFFDC401" Margin="5" ItemsSource="{Binding Executors}" SelectedItem="{Binding AddExecutor}" HorizontalContentAlignment="Stretch" >
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Background="#FFFDC401" Margin="5">
                                            <StackPanel Orientation="Horizontal">
                                                <Label Content="{Binding Initials}" FontSize="15"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>

                        <StackPanel Grid.Column="1" Background="LightYellow" Margin="0,30,0,0">
                            <Button Margin="5" Content="☞" Command="{Binding AddEx}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                            <Button Margin="5" Content="☜" Command="{Binding RemoveEx}"/>
                        </StackPanel>

                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Content="Исполнители"/>
                        <ListBox Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Visible" BorderBrush="Black" BorderThickness ="1" Background="#FFFDC401" Margin="5,5,5,5" ItemsSource="{Binding SelectedExecutors}" SelectedItem="{Binding RemoveExecutor}" HorizontalContentAlignment="Stretch" >
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Background="#FFFDC401" Margin="5">
                                        <StackPanel Orientation="Horizontal">
                                                <Label Content="{Binding Initials}" FontSize="15"/>
                                            </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        </Grid>
                    </Grid>
                    <Button Content="Сохранить" Height="30" Width="110" Margin="20" Command="{Binding Save}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
