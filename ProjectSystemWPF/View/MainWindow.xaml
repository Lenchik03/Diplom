<Window x:Class="ProjectSystemWPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectSystemWPF.View"
        xmlns:vm="clr-namespace:ProjectSystemWPF.ViewModel"
        mc:Ignorable="d"
        DataContext="{DynamicResource mainVM}"
        Title="MainWindow" Height="800" Width="1200">
    <Window.Resources>
        <vm:MainVM x:Key="mainVM"/>
    </Window.Resources>
    <Grid Background="LightYellow">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/View/logo.png" Width="2000" Height="60" HorizontalAlignment="Left"/>
        <Menu HorizontalAlignment="Right">
            <MenuItem Header="Выйти" Command="{Binding SignOut}" Grid.Column="1"/>
        </Menu>
        <Frame Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
