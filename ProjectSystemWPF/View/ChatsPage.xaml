<Page x:Class="ProjectSystemWPF.View.ChatsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectSystemWPF.View"
      xmlns:vm="clr-namespace:ProjectSystemWPF.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Чаты"
      DataContext="{DynamicResource chatsVM}">

    <Page.Resources>
        <vm:ChatsVM x:Key="chatsVM"/>
    </Page.Resources>
    <StackPanel Background="#FFFDC401">
        <Border Margin="10" BorderBrush="Black" BorderThickness="1" Height="550">
            <Grid>
                

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto" MinWidth="494"/>
                </Grid.ColumnDefinitions>

                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Right"/>
                <StackPanel Grid.RowSpan="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="ЧАТЫ" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
                        <Button Content="+" Width="40" HorizontalAlignment="Right" Command="{Binding NewChat}" Margin="4"/>
                    </Grid>
                    
                    
                        
                        <StackPanel Margin="4">
                            <TextBlock Text="Поиск по названию" />
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

                        </StackPanel>
                        
                    

                   
                        <StackPanel Margin="10,20,10,0" Grid.Row="2">
                        <ListBox ScrollViewer.VerticalScrollBarVisibility="Auto" ItemsSource="{Binding Chats}" SelectedItem="{Binding Chat}" Background="LightYellow">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/logo.jpg" Width="50" Height="50"/>
                                        <Label Content="{Binding Title}"/>
                                        <!--<Label Content="{Binding CountMess}"/>-->
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                    
                </StackPanel>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Column="1" Grid.RowSpan="3">
                        <Label Content="{Binding Chat.Title}" FontSize="25" FontWeight="Bold"/>
                        <StackPanel Margin="10,20,10,0" >
                            <ListBox ItemsSource="{Binding Messages}" SelectedItem="{Binding Message}" Background="LightYellow" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="{Binding Sender}"/>
                                            <Label Content="{Binding Message.Text}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                
                                    
                            </ListBox>
                        </StackPanel>
                        

                    </StackPanel>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding Text}" Background="LightYellow" Margin="3"/>
                        <Button Content="📎" Height="40" Width="50" Command="{Binding AttachFile}" Grid.Column="1"/>
                        <Button Content="➤" Height="40" Width="50" Command="{Binding SendMessage}" Grid.Column="2"/>
                    </Grid>
                </Grid>
                
            </Grid>
        </Border>

    </StackPanel>
</Page>
