<Page x:Class="ProjectSystemWPF.View.ChatsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectSystemWPF.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Чаты">

    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        
        <Label Content="Чаты" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Button Content="+" Width="22" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0" Grid.Row="1" Command="{Binding NewChat}"/>
            <StackPanel Margin="3" Grid.Row="1">
            <TextBlock Text="Поиск по названию" Margin="20,0,0,0"/>
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
            <ScrollViewer Grid.Row="2">
        <StackPanel Margin="20,0,20,0" >
            <ListBox ItemsSource="{Binding Chats}" SelectedItem="{Binding Chat}">
                <ListBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/logo.jpg" Width="50" Height="50"/>
                        <Label Content="{Binding Chat.Title}"/>
                        <Label Content="{Binding CountMess}"/>
                    </StackPanel>
                </ListBoxItem>
            </ListBox>
        </StackPanel>
            </ScrollViewer>
        </Grid>
    </StackPanel>
</Page>
